<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item">
    <%= link_to restaurant.name, restaurant_path(restaurant), class:"fs-4 fw-semibold link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
    <div class="text-black-50 fs-5">| Cat: <%= restaurant.category %></div>
            <%= link_to restaurant_path(restaurant),
          data: {turbo_method: :delete, turbo_confirm: "sure ?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
    </li>
  <% end %>
</ul>
